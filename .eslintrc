// Use this file as a starting point for your project's .eslintrc.
// Copy this file, and add rule overrides as needed.
// Added jsx-quotes and react/jsx-quotes to remove deprecation warning
// ("The react/jsx-quotes rule is deprecated. Please use the jsx-quotes rule instead.")
// Added jasmine rules to make sure our tests are formatted properly and to
// disallow fdescribes.
{
  "extends": "airbnb",
  "rules": {
    "indent": [2, 2, {"SwitchCase": 1}],
    "jsx-quotes": [2, "prefer-double"],
    "react/jsx-quotes": 0,
    "react/prop-types": 0,
    "jasmine/no-spec-dupes": [2, "branch"],
    "jasmine/no-suite-dupes": [2, "branch"],
    "jasmine/no-disabled-tests": 2,
    "jasmine/valid-expect": 0,
  },
  "plugins": [
    "jasmine",
  ]
}
